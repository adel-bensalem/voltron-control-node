#!/bin/sh
application_name={{ application_name }}
playbook_location={{ ansible_location }}
db_name={{ db_name }}
db_user={{ db_user }}
db_password={{ db_password }}

ansible-playbook -i "$playbook_location/inventory" -e "application_name=$application_name db_name=$db_name db_user=$db_user db_password=$db_password" "$playbook_location/deploy-application.yml"
